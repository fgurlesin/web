 

<div class="card shadow rounded mt-5">
  <div class="card-header">
   <span class="float-left ml-3 text-dark font-weight-bold "> <% @comment.user  %> : </span>  
   <div class="text-right"><%= time_ago_in_words(comment.created_at) %></div>
  </div>
  <div class="card-body"> 
      
      <div class="container  ">
      
      <blockquote class="blockquote  mb-0">
      <span class="lead float-left"><%= comment.comment%> </span>
      <%if logged_in? && (@article.user==current_user || current_user.admin? ) %>
      <%= link_to 'Delete' , [comment.article, comment] , method: :delete , class: "btn-sm btn-danger float-right", data:{confirm: "Are you sure ?"}%>
      <%end%>
    </blockquote>
    </div>
  </div>
</div>

