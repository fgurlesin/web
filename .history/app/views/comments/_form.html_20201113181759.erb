<%if logged_in?%>
<%= form_for [@article, @article.comments.build] do |f| %>
  <div class="form-group mt-4">
  <div class="field">
    <div class="control">
    Name : 
      <%=f.text_area :name , input_html: {class: 'input'} , wrapper: false , label_html: {class: 'label'} %>
    </div>
  </div> 
  </div>
<div class="form-group mt-4">
  <div class="field">
    <div class="control">
      Comment : 
      <%=f.text_area :comment , input_html: {class: 'textarea'} , wrapper: false , label_html: {class: 'label'} %>
    </div>
  </div> 
</div>
  <%=f.submit "Add Comment" ,class: "btn btn-dark"%>
