 

<div class="card">
  <div class="card-header">
   <span class="float-left ml-3 text-dark "> <%= comment.name.capitalize %> : </span>  
   <div class="text-right"><%= time_ago_in_words(comment.created_at) %></div>
  </div>
  <div class="card-body"> 
      
      <div class="container  ">
      
      <blockquote class="blockquote  mb-0">
      <span class="lead float-left"><%= comment.comment%> </span>
      <%= link_to 'Delete' , [comment.article, comment] , method: :delete , class: "btn-sm btn-danger float-right", data:{confirm: "Are you sure ?"}%>
    </blockquote>
    </div>
  </div>
</div>

