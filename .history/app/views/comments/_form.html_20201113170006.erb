<%= form_for [@article, @article.comments.build] do |f| %>
  <div class="field">
    <div class="control">
      <%=f.text_area :name , input_html: {class: 'input'} , wrapper: false , label_html: {class: 'label'} %>
    </div>
  </div> 
  <div class="field">
    <div class="control">
      <%=f.text_area :comment , input_html: {class: 'textarea'} , wrapper: false , label_html: {class: 'label'} %>
    </div>
  </div> 

  <%=f.submit "Add Comment"class: "button is-primary"%>

<%end%>


