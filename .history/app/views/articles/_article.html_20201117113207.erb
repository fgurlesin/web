<div class="container  ">
    <% @article.each do |article| %>
      <div class="row justify-content-md-center ">
        <div class="col-8 mt-4 "id="article_list_element">
          <div class="card text-center shadow mb-4 bg-white rounded">
            <div class="card-header font-italic">
              <% if article.user %>
                by <%= link_to article.user.username , user_path(article.user) if article.image.attached? %>
              <% end %>
            </div> 
            <div class="card-body">
              
              <%=  link_to image_tag(article.image , style:"width:100%") , article_path(article) if article.image.attached?%> 
               <h5 class="card-title mt-4"><%= link_to article.tittle , article_path(article) , class:"font-weight-bold text-dark text-capitalize" %></h5>
               
              <p class="card-text"><%= truncate(article.description,length:50 ) %></p> 
                <%= link_to 'View' , article_path(article) , class:"btn-sm btn-dark"  %>
                <%if logged_in? && (article.user==current_user || current_user.admin? ) %>
                  <%= link_to 'Edit' , edit_article_path(article) , class:"btn-sm btn-dark" %>  
                  <%= link_to 'Delete' , article_path(article.id) ,  method: :delete , data: {confirm:"Are you sure ?"} , class:"btn-sm btn-dark" %> 
                <%end%>  
            </div>
            <div class="card-footer text-muted">
                <div class="my-2"> 
                  <% if article.categories.any?%> 
                    Tags : 
                       <%= render article.categories %> 
                  <%end%> 
                 </div> 
              <small>Created <%=time_ago_in_words(article.created_at)%> ago  , Edited <%=time_ago_in_words(article.updated_at)%> ago </small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>