<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors' , obj: @article %>
      <%= form_with(model: @article, class:"shadow-sm p-3 mb-5 bg-light rounded", local: true ) do |f| %>
      
        <div class="form-group row">
            <%= f.label :Tittle , class:"col-2 col-form-label "%>  
          <div class="col-10">
            <%= f.text_field :tittle , class:"form-control shadow rounded" , placeholder:"Title of article" %>
          </div> 
        </div>

          <div class="form-group row"> 
              <%= f.label :Description , class:"col-2 col-form-label "%> 
            <div class="col-10"> 
              <%= f.text_area :description , rows:12 ,class:"form-control shadow rounded" , placeholder:"Description of article"%>
            </div>
          </div>
        <div class="form-group row">
        <%= f.label :Category   , class:"col-2 col-form-label text-dark" %>
          <div class="col-10">
            <%= f.collection_select(:category_ids, Category.all, :id, :name , {prompt: "Select the category"},{multiple: true , size: 3 ,class:"custom-select shadow rounded"})%>
           
        </div>
      </div>
        <div class="form-group row justify-content-center"> 
          <%= f.submit class:"btn btn-outline-light btn-dark shadow rounded" %>
        </div>
            
      <% end %>
    </div>
    <%= link_to '[ Cancel and Returns to articles listing ]' , articles_path() %>
  </div> 
</div>