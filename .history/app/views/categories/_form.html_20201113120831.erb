
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-10 ">
      <%= render 'shared/errors' ,  obj: @category %>
      <%= form_with(model: @category, class:"shadow-sm p-3 mb-5 bg-light rounded", local: true ) do |f| %>
      
          <div class="form-group row">
              <%= f.label :name, "Category Name" , class:"col-2 col-form-label  "%>  
            <div class="col-10">
              <%= f.text_field :name , class:"form-control shadow rounded" , placeholder:"Enter a name" %>
            </div> 
          </div> 

          <div class="form-group row justify-content-center"> 
            <%= f.submit class:"btn btn-outline-light btn-dark shadow rounded" %>
          </div>

          <% if current_user%>
          <div class="  row justify-content-center text-danger " >
           <%# <%= link_to "[Delete this category]" , category_path(@category) ,class: "text-danger" , method: :delete ,data:{confirm: "Are you sure you want to continue? " } %>
          </div> 
          <%end%>
      
      <% end %>
    </div>
    <%= link_to '[ Cancel and Returns to category page ]' , category_path(@category) %>
  </div> 
</div>